{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": ".env.*",
        "watchAssets": true
      }
    ],
    "plugins": [{
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true,
        "introspectComments": true,
        "dtoKeyOfComment": "description",
        "controllerKeyOfComment": "description"
      }
    }],
    "builder": {
      "type": "swc"
    },
    "typeCheck": true
  },
  "generateOptions": {
    "spec": false
  }
}
